<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:background="@color/border"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/background"
            android:padding="4dp"
            >
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_nickname"
                        android:padding="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:fontFamily="@font/pixelar"
                        android:textSize="30sp"
                        android:text="NICKNAME: "
                        />
                    <TextView
                        android:id="@+id/tv_position"
                        android:padding="1dp"
                        android:layout_below="@id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:fontFamily="@font/pixelar"
                        android:textSize="30sp"
                        android:text="POSITION: "
                        />
                    <TextView
                        android:id="@+id/tv_score"
                        android:padding="1dp"
                        android:layout_below="@id/tv_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text"
                        android:fontFamily="@font/pixelar"
                        android:textSize="30sp"
                        android:text="SCORE: "
                        />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="2dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_nickname_value"
                        android:padding="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/pixelar"
                        android:textSize="30sp"
                        android:text="NICKNAME"
                        />
                    <TextView
                        android:id="@+id/tv_position_value"
                        android:layout_below="@id/tv_nickname_value"
                        android:padding="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/pixelar"
                        android:textSize="30sp"
                        android:text="#"
                        />
                    <TextView
                        android:id="@+id/tv_score_value"
                        android:layout_below="@id/tv_position_value"
                        android:padding="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:fontFamily="@font/pixelar"
                        android:textSize="30sp"
                        android:text="1000"
                        />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>